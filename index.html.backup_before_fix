  relatorioMetasDesc = $("relatorioMetasDesc");
  relatorioGoalsNotesSimple = $("relatorioGoalsNotesSimple");
  relatorioGoalsNotesSimpleStatus = $("relatorioGoalsNotesSimpleStatus");
  // Leads
  relatorioLeadsSection = $("relatorioLeadsSection");
