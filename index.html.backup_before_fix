atformFilter = $("trafegoOptimizationPlatformFilter"), trafegoOptimizationRecurrenceFilter = $("trafegoOptimizationRecurrenceFilter"), trafegoOptimizationStatusFilter = $("trafegoOptimizationStatusFilter"), trafegoOptimizationSearch = $("trafegoOptimizationSearch"), trafegoOptimizationsEmpty = $("trafegoOptimizationsEmpty"), trafegoHistoryBody = $("trafegoHistoryBody"), trafegoHistoryPlatformFilter = $("trafegoHistoryPlatformFilter"), trafegoHistorySearch = $("trafegoHistorySearch"), trafegoHistoryEmpty = $("trafegoHistoryEmpty");
